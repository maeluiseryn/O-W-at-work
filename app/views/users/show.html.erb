
<p id="notice"><%= notice %></p>



  <h2><%= @user.name %></h2>


<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Created at:</b>
  <%= @user.created_at %>
</p>



 <div id="info" class="span-19">
        <ul>

          <li><a href="#clients_table">Clients de <%=@user.name %></a></li>
          <li><a href="#projects_table">Projets de <%=@user.name %></a></li>
          <li><a href="#files_table">Fichiers de <%=@user.name %></a></li>
        </ul>
       

     <div id="clients_table">

       <table class="span-18">
       <tr>
         <th>Name</th>
          <th>Surname</th>
         <th>Has_project?</th>
         <th></th>

        </tr>
        <%=render :partial=> 'clients/client_list',:collection => @user.clients ,:as=>:client %>
       </table>
     </div>

     <div id="projects_table">

       <table class="span-18">

         <tr>
           <th>Id</th>
           <th>Client</th>
           <th>Reference projet</th>
           <th></th>
           <th></th>
         </tr>
        <%=render :partial=> 'projects/project_list',:collection => @user.projects ,:as=>:project %>
       </table>
     </div>
   <table id="files_table">
     <tr>
       <th>Id</th>
       <th>Name </th>
       <th>Url</th>
       <th>Content_Type</th>
       <th>File_Size</th>
       <th></th>
     </tr>

     <%= render :partial => 'files/show_file' ,:collection => @user.uploaded_files ,:as=>:uploaded%>

   </table>

</div>
<p><%= link_to'upload' ,:controller =>'users' ,:action=>'upload_a_file'%></p>
<p><%= link_to'voir dossier personnel' ,:controller =>'file_browser' ,:action=>'user_list'%></p>
<p><%= link_to 'Back', users_path %></p>
<p><%= #noinspection RubyArgCount
            link_to 'Edit', edit_user_path(@user) %></p>
<p><%= #noinspection RubyArgCountlink_to 'Profile',user_user_profiles_path(@user)
            profile_show_or_create_link @user %></p>